{
	"compilerOptions": {
		"esModuleInterop": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": "src/",
		"paths": {
			"controllers/*": ["./controllers/*"],
			"routers/*": ["./routers/*"],
			"middleware/*": ["./middleware/*"],
			"types/*": ["./types/*"],
			"shared/*": ["../../shared/*"],
			"utils/*": ["./utils/*"],
			"config/*": ["./config/*"],
			"auth/*": ["./auth/*"]
		}
	},
	"exclude": ["node_modules/"]
}
