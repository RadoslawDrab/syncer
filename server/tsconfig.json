{
	"compilerOptions": {
		"esModuleInterop": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": "./",
		"paths": {
			"src/*": ["./src/*"],
			"controllers/*": ["./src/controllers/*"],
			"routers/*": ["./src/routers/*"],
			"middleware/*": ["./src/middleware/*"],
			"types/*": ["./src/types/*"],
			"shared/*": ["../shared/*"]
		}
	},
	"exclude": ["node_modules/"]
}
