{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "tailwind.config.ts", "src/**/*", "src/**/*.vue", "../shared/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "noEmit": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "rootDir": "../",
    "rootDirs": [".", "../shared"],
    "baseUrl": "./src/",
    "paths": {
      "shared/*": ["../../shared/*"],
      "components/*": ["components/*"],
      "views/*": ["views/*"],
      "router/*": ["router/*"],
      "utils/*": ["utils/*", "assets/utils/*", "../../shared/utils/*"],
      "assets/*": ["assets/*"],
      "composables/*": ["composables/*"],
      "types/*": ["types/*", "../../shared/types/*"],
      "config/*": ["../*"]
    }
  }
}
